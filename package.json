    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "prisma": "^6.10.1",
    "rimraf": "^6.0.1",
    "storybook": "^9.0.12",
    "tailwindcss": "^4.1.10",
    "ts-expect": "^1.3.0",
    "typescript": "5.8.3",
    "vitest": "^3.2.4"
