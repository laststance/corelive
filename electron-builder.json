{
  "appId": "com.corelive.todoapp",
  "productName": "CoreLive TODO",
  "copyright": "Copyright Â© 2025 CoreLive",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "icon": "build/icons/icon-512x512.png",
  "nodeGypRebuild": false,
  "npmRebuild": false,
  "buildDependenciesFromSource": false,
  "files": [
    ".next/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "package.json",
    "next.config.js",
    "public/**/*",
    "prisma/**/*",
    "!src/**/*",
    "!**/*.test.*",
    "!**/*.spec.*",
    "!**/__tests__/**/*",
    "!**/test/**/*",
    "!**/.DS_Store",
    "!**/node_modules/.cache/**/*",
    "!**/node_modules/**/test/**/*",
    "!**/node_modules/**/tests/**/*",
    "!**/node_modules/**/*.test.js",
    "!**/node_modules/**/*.spec.js",
    "!**/node_modules/**/README.md",
    "!**/node_modules/**/CHANGELOG.md",
    "!**/node_modules/**/LICENSE*",
    "!**/node_modules/**/*.d.ts",
    "!**/node_modules/**/*.map",
    "!**/.next/cache/**/*",
    "!**/.next/static/chunks/pages/_error-*.js",
    "!**/.next/static/chunks/webpack-*.js"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public",
      "filter": ["**/*"]
    }
  ],
  "publish": {
    "provider": "github",
    "owner": "corelive",
    "repo": "corelive",
    "private": true,
    "releaseType": "release"
  },
  "protocols": [
    {
      "name": "CoreLive TODO Protocol",
      "schemes": ["corelive"]
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "notarize": false,
    "type": "distribution",
    "minimumSystemVersion": "10.15.0",
    "icon": "build/icons/icon-1024x1024.png"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "title": "${productName} ${version}",
    "backgroundColor": "#ffffff",
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "cscLink": "${WIN_CSC_LINK}",
    "cscKeyPassword": "${WIN_CSC_KEY_PASSWORD}",
    "icon": "build/icons/icon-256x256.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "${productName}",
    "include": "build/installer.nsh",
    "deleteAppDataOnUninstall": false,
    "perMachine": false
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      },
      {
        "target": "snap",
        "arch": ["x64"]
      }
    ],
    "category": "Office",
    "icon": "build/icons/",
    "desktop": {
      "entry": {
        "Name": "CoreLive TODO",
        "Comment": "A modern TODO application with desktop integration",
        "Keywords": "todo;task;productivity;electron;",
        "StartupWMClass": "corelive",
        "MimeType": "x-scheme-handler/corelive;"
      }
    },
    "maintainer": "CoreLive <support@corelive.com>",
    "vendor": "CoreLive",
    "synopsis": "Modern TODO application with desktop integration"
  },
  "deb": {
    "depends": [
      "gconf2",
      "gconf-service",
      "libnotify4",
      "libappindicator1",
      "libxtst6",
      "libnss3"
    ]
  },
  "rpm": {
    "depends": ["libnotify", "libappindicator-gtk3", "libXtst", "nss"]
  },
  "snap": {
    "grade": "stable",
    "confinement": "strict",
    "plugs": [
      "default",
      "desktop",
      "desktop-legacy",
      "home",
      "x11",
      "unity7",
      "browser-support",
      "network",
      "gsettings",
      "audio-playback",
      "pulseaudio",
      "opengl"
    ],
    "environment": {
      "DISABLE_WAYLAND": "1"
    }
  },
  "appImage": {
    "artifactName": "${productName}-${version}.${ext}"
  },
  "afterSign": "scripts/notarize.js",
  "afterAllArtifactBuild": "scripts/after-build.js"
}
