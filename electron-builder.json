{
  "appId": "com.corelive.todoapp",
  "productName": "CoreLive TODO",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    ".next/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "package.json",
    "next.config.js",
    "public/**/*",
    "src/**/*",
    "prisma/**/*",
    "!src/**/*.test.*",
    "!src/**/*.spec.*"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/favicon.ico"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "category": "Office",
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
