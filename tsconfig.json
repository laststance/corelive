{
  "$shema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    /* If NOT transpiling with TypeScript: */
    "module": "Preserve",
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    "./*.js",
    "./*.ts",
    "./*.cjs",
    "./*.mjs",
    "./*.mts",
    "./**/*.js",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.jsx",
    "./**/*.cjs",
    "./**/*.mjs",
    "./**/*.mts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".storybook/*.js",
    ".storybook/*.ts",
    ".storybook/*.tsx",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next", "next", "examples-with-next"]
}
